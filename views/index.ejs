<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Décompte</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Police horloge -->
  <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@700&display=swap" rel="stylesheet">
  <style>
    body {
      background-color: #2ecc71; /* Fond vert */
      color: white;
      font-family: 'Courier New', Courier, monospace; /* Police par défaut */
      height: 100vh;
      margin: 0;
      display: flex;
      flex-direction: column;
    }
    .navbar {
      height: 70px;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .form-inline {
      display: flex;
      justify-content: center;
      gap: 10px;
    }
    #countdown {
      font-size: 6rem; /* Taille plus grande */
      text-align: center;
      margin-top: auto;
      margin-bottom: auto;
      font-family: 'Orbitron', sans-serif; /* Police horloge */
      color: black; /* Texte en noir */
      font-weight: bold; /* Texte en gras */
    }
  </style>
</head>
<body>
  <!-- Navbar-like Input Section -->
  <div class="navbar bg-dark">
    <form id="salaryForm" class="form-inline">
      <input 
        type="number" 
        id="salary" 
        class="form-control" 
        placeholder="Entrez votre salaire mensuel (€)" 
        required 
      />
      <button type="submit" class="btn btn-light">Valider</button>
    </form>
  </div>

  <!-- Centered Countdown Section -->
  <div id="countdown">Entrez votre salaire pour commencer le décompte</div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Script JavaScript -->
  <script>
    document.getElementById("salaryForm").addEventListener("submit", async (e) => {
      e.preventDefault();
      const salary = document.getElementById("salary").value;

      const response = await fetch(`/api/calculate?salary=${salary}`);
      const data = await response.json();

      if (data.error) {
        alert(data.error);
        return;
      }

      let totalSeconds = 66; // 1 minute et 6 secondes
      const incomePerSecond = data.incomePerSecond;
      const countdown = document.getElementById("countdown");

      let totalEarned = 0;
      const targetValue = 66 * incomePerSecond;

      // Mise à jour du compteur chaque seconde
      const interval = setInterval(() => {
        if (totalSeconds <= 0) {
          clearInterval(interval);
          countdown.textContent = `${targetValue.toFixed(3)}€`; // Affichage final
          return;
        }

        totalEarned += incomePerSecond; // Augmenter le montant gagné chaque seconde
        countdown.textContent = `${totalEarned.toFixed(3)}€`; // Affichage avec 3 décimales
        totalSeconds--; // Réduction du compteur de temps
      }, 1000); // Mise à jour toutes les 1 seconde
    });
  </script>
</body>
</html>